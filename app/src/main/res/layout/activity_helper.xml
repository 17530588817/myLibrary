<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/helper"
    tools:context=".activity.HelperActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/light_yellow"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/pink"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/helper_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/main_title"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_helper_back" />

    <TextView
        android:id="@+id/helper_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_marginLeft="3dp"
        android:background="@color/white_low"
        android:text="小帮助："
        android:textSize="20sp" />

    <ListView
        android:id="@+id/helper_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/helper_title"
        android:layout_marginTop="3dp"
        android:background="@color/white_low" />

</RelativeLayout>