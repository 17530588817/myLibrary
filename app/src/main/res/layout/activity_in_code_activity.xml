<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.InCodeActivity">

    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:background="@color/light_yellow"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/pink"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/incode_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/main_title"
        android:layout_marginRight="10dp"
        android:background="@drawable/ic_helper_back" />

    <ImageView
        android:id="@+id/in_code_image"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_margin="20dp"
        android:background="@mipmap/in_code" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/in_code_image"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="我的入馆码"
        android:textSize="20sp" />

</RelativeLayout>